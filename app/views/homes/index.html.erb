<section class="home-jobs">
  <div class="container mb-3  " >
        <div class="row">
            <div class="col-md-8 ">
                <h3 class="mt-3">Recently added jobs</h3>
                <% @jobs.each do |job| %>
                <div class="card apply-card mt-5 animated slideInUp" style="width:45rem;">
                    <div class="row">
                        <div class="col-md-6">
                            
                            <div class="card-body"> 
                                <div class="ml-3 mt-2 text-uppercase text-main font-weight-bold"><%= job.job_type%></div>
                                <div class="ml-3 mt-2 text-capitalize font-weight-bold"><%= job.title%></div>
                                <div class='ml-3 mt-3'><%= job.company.email%> ,&nbsp;&nbsp;&nbsp;&nbsp;  <%= job.location%></div>
                            </div>
                            
                        </div>
                        <div class="col-md-6">
                        <%= link_to  "Apply", new_request_path(job_id: job.id),method: :post ,class:'btn btn-primary btn-lg mt-5 apply-btn' %>
                        </div>
                    </div>
                </div>
                <%end%>
            </div>
            <div class="col-md-4 ">
                <h4 class="mt-3">Recently Joined Companies</h4>
                <%Company.all.limit(4).each do |comp| %>
                <div class="card mt-5 bg-light animated slideInUp">
                    <div class="card-body">
                        <%= comp.email%>
                    </div>
                </div>
                <%end%>
            </div>
        </div>
  </div>
