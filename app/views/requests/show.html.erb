<body class="bg-main ">
    <div class="d-flex justify-content-center job-show">
        <div class="card mb-3" style="width:30rem;">
            <h3 class="card-header text-center">Job Application Request</h3>
            <div class="card-body">  
                <p>
                  <strong>Content:</strong>
                
                  <%=  link_to 'Cv',  @request.content %>
                </p>

                <p>
                  <strong>Worker:</strong>
                  <%= @request.worker.email %>
                </p>

                <p>
                  <strong>Company:</strong>
                  <%= @request.company.email %>
                </p>
                <div class="text-center">
                  <%if current_worker%>
                  <%= link_to 'Edit', edit_request_path(@request), class:'btn btn-primary' %> 
                  <%end%>
                  <%= link_to 'Back', :back, class:'btn btn-light' %>
                  <%= link_to 'Home', root_path , class:'btn btn-light'%>   
                </div>           
            </div>
        </div>
    </div>  
</body>
