<body class="bg-main ">
    <div class="d-flex justify-content-center job-show">
        <div class="card mb-3" style="width:30rem;">
            <h3 class="card-header text-center">Editing Request</h3>
            <div class="card-body">           

                <%= form_with(model: @request, local: true,html: { multipart: true }) do |form| %>
                    <% if @request.errors.any? %>
                        <div id="error_explanation">
                        <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

                        <ul>
                        <% @request.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                        </ul>
                        </div>
                    <% end %>                    
                    
                    <div class="form-group">
                        <%= form.label 'Enter you Cv Link'%><br>
                        <%= form.text_field :content,placeholder:'Enter your Cv link here', class:'form-control' %>
                    </div>
                    
                    <% Request.all.each do |req|%>
                        <% 
                        
                        if params[:company_id].to_i == req.company.id%>
                    
                        <div class="field">   
                            <%= form.hidden_field   :worker_id , value:req.worker_id%>
                        </div>

                        <div class="field">   
                            <%= form.hidden_field  :company_id , value:req.company_id  %>    
                        </div>
                        <div class="field">   
                            <%= form.hidden_field  :job_id , value:req.job_id %>    
                        </div>

                        <div class="text-center">
                            <%= form.submit class:'btn btn-primary'%>
                        </div>
                        <%end%>
                    <%end%>
                    
                <% end %>
                <%= link_to 'Cancel', root_path , class:'btn btn-light'%>              
              
            </div>
        </div>
    </div>  
</body>
