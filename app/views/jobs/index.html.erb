<p id="notice"><%= notice %></p>
<div>
  <ul>
  <%if company_signed_in?%>
    <li><%= link_to "My Account",edit_company_registration_path,class:" text-dark mt-3 nav-link" %></li>
    <li> <%= link_to "Logout", destroy_company_session_path, method: :delete, class:"btn btn-dark text-light mt-3 "%> 
  <%else%>
  <%end%>
  </ul>
</div>
<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Deadline</th>
      <th>Amount</th>
      <th>Status</th>
      <th>Type</th>
      <th>Location</th>
      <th>Remote</th>
      <th>Description</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <%if job.company_id == current_company.id%>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.deadline %></td>
        <td><%= job.amount %></td>
        <td><%if job.status.present?%>
            <%= job.status %>
            <%else%>
            <%= 'Not Started'%>
            <%end%>
        </td>
        <td><%= job.job_type %></td>
        <td><%= job.location %></td>
        <td><%= job.remote %></td>
        <td><%= job.description %></td>
        <td><%= job.company.email %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%else%>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

